-- Fundamental functions
abort : a
external abort = "abort"

-- Fundamental types
data Unit =
  | Unit

data Bool =
  | False
  | True

data Pair a b =
  | Pair a b

data Option a =
  | None
  | Some a

data Choice a b =
  | First a
  | Second b

-- Fundamental classes
class Eq a where (==) : a -> a -> Bool

(!=) : (Eq a) => a -> a -> Bool
(!=) x y = if x == y then False else True

-- Fundamental functions
id : a -> a
id x = x

(∘) : (b -> c) -> (a -> b) -> (a -> c)
(∘) f g x = f (g x)
