-- Integers
import std2/basic
import std2/ord
import std2/monoid
import std2/num

-- Equality
eq_int : Int -> Int -> Bool
external eq_int = "eq"

instance Eq Int where
  eq = eq_int


-- Ordering
lt_int : Int -> Int -> Bool
external lt_int = "lt"

le_int : Int -> Int -> Bool
external le_int = "le"

ge_int : Int -> Int -> Bool
external ge_int = "ge"

gt_int : Int -> Int -> Bool
external gt_int = "gt"

instance Ord Int where
  lt = lt_int
  le = le_int
  ge = ge_int
  gt = gt_int


-- Algebra
neg_int : Int -> Int
external neg_int = "neg"

add_int : Int -> Int -> Int
external add_int = "add"

sub_int : Int -> Int -> Int
external sub_int = "sub"

mul_int : Int -> Int -> Int
external mul_int = "mul"

instance Ring Int where
  neg = neg_int
  add = add_int
  sub = sub_int
  mul = mul_int

div : Int -> Int -> Int
external div = "div"

mod : Int -> Int -> Int
external mod = "mod"

infix / div
infix % mod

instance Monoid Int where
  empty = 0
  append = add_int
